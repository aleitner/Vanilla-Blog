<%@blogpost.each do |blogpost|%>
	<table class="table table-hover table-condensed">
	<td><b><%=blogpost.user.email%></b><br>
	<%=blogpost.content%><br>
		<% if current_user.id == blogpost.user_id%>
		<%= link_to 'Edit', edit_blogpost_path(blogpost) %>
	<%else%>

	<%end%>
	</table>
<%end%>
<h2>Comments</h3>
<%@comments.each do |comment|%>
	<table class="table table-hover table-condensed">
	<td><b><%=comment.user.email%></b><br>
	<%=comment.content%><br>
	<%if current_user.id == comment.user_id %>
		<%= link_to 'Edit', edit_comment_path(comment) %>
	<%else%>
	<%end%>
	</table>
<%end%>
<br>
<br>
<%@blogpost.each do |blogpost|%>
<a href=/comments/new?blogpost_id=<%=blogpost.id%>>New Comment</a>
<%end%>
